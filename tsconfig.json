{
    "compilerOptions": {
        "target": "ES5",
        "lib": [
            "dom",
            "es6",
            "es5",
            "dom.iterable",
            "scripthost"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "baseUrl": ".",
        "declaration": true,
        "sourceMap": true,
        "outDir": "dist",
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": [
        "./src"
    ],
    "exclude": [
        "dist",
        "node_modules"
    ]
}
